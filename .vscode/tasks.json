{
  "version": "0.1.0",
  "_runner": "terminal",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [{
    "taskName": "build",
    "args": ["run", "build"],
    "isBuildCommand": true,
    "problemMatcher": {
		  "fileLocation": ["relative", "${workspaceRoot}"],
		  "pattern": [{
			  "regexp": "ERROR in (.*)$",
			  "file": 1
			}, {
			  "regexp": "\\((\\d+),(\\d+)\\): (error|warning|info)? (TS\\d+): (.*)$",
			  "line": 1,
			  "column": 2,
  		  "severity": 3,
        "code": 4,
			  "message": 5
			}]
    }
	}, {
    "taskName": "run",
    "args": ["start"]
  }, {
    "taskName": "test",
    "args": ["test"],
    "isTestCommand": true
  }]
}
